lblSpcs = tk.Label(
    cds,
    height=1)
lblSpcs.pack()

btnCds = tk.Button(
    cds,
    #command=cadastrar,
    text = 'Cadastrar',
    width=20,
    height=2)
btnCds.pack()
#cds //

#vsl



#edit



